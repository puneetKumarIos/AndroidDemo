<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Hint Appearance theme. -->

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/themeBackroundColor</item>
    </style>

    <!-- Bottom Line theme. -->

    <style name="MyEditTextBottomLine" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/themeBackroundColor</item>
        <item name="colorControlNormal">@color/themeBackroundColor</item>
    </style>


    <!-- Claim Heding Style. -->

    <style name="policy_detail_heading">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:drawableRight">@drawable/edit</item>
    <item name="android:textColor">@color/heading</item>
    <item name="android:textSize">@dimen/ts_48</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


</resources>
