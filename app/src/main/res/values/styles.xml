<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Hint Appearance theme. -->

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/themeBackroundColor</item>
    </style>

    <!-- Bottom Line theme. -->

    <style name="MyEditTextBottomLine" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/themeBackroundColor</item>
        <item name="colorControlNormal">@color/themeBackroundColor</item>
    </style>


    <style name="card_border">
        <item name="android:background">@drawable/card_bg</item>
    </style>

    <style name="fill_button">
        <item name="android:minWidth">@dimen/btn_min_width</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ts_42</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/btn_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/btn_top_bottom_padding</item>
        <item name="android:paddingLeft">@dimen/btn_left_right_padding</item>
        <item name="android:paddingRight">@dimen/btn_left_right_padding</item>
        <item name="android:background">@drawable/coloredbutton_sq</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="spinner_basic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:minHeight">@dimen/btn_cornor</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:paddingRight">@dimen/edit_pencil_size</item>
    </style>


    <style name="heading_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/default_small_margin</item>
        <item name="android:textColor">@color/heading</item>
        <item name="android:textSize">@dimen/ts_36</item>
    </style>

    <!-- Claim Heding Style. -->

    <style name="policy_detail_heading">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:drawableRight">@drawable/edit</item>
    <item name="android:textColor">@color/heading</item>
    <item name="android:textSize">@dimen/ts_48</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


</resources>
