                            app:layout_constraintTop_toTopOf="@id/nominee_relationship_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Nominee RelationShip Seprator -->

            <view
                    android:id="@+id/nominee_relation_seprator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#C8C8C8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nominee_relationship_cardview"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    />



            <!-- Member Profile Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_profile_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nominee_relation_seprator">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Nominee Title -->

                    <TextView
                            android:id="@+id/member_profile_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Members Profile"

                            android:textColor="#008391"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add/Remove Member"
                            android:textColor="#E64E1C"
                            android:layout_marginRight="15dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/member_profile_title"

                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>