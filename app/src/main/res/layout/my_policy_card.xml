<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/policy_info_cardview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Policy Name -->

            <TextView
                    android:id="@+id/claim_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Optima Restore"
                    android:textColor="#008391"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="16sp"

                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"


                    />

            <!-- Proposer Name Title -->
            <TextView
                    android:id="@+id/proposer_name_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Proposer Name"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="12sp"

                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="@id/claim_status"
                    app:layout_constraintTop_toBottomOf="@id/claim_status"
                    android:layout_marginTop="12dp"


                    />

            <!--Proposer Name-->
            <TextView
                    android:id="@+id/proposer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dr Piyush Shandilya"

                    android:textColor="#777777"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textSize="14sp"

                    app:layout_constraintTop_toBottomOf="@id/proposer_name_title"
                    app:layout_constraintStart_toStartOf="@id/claim_status"
                    app:layout_constraintEnd_toStartOf="@id/guideline"

                    />

            <!--Policy Period Title-->
            <TextView
                    android:id="@+id/policy_period_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Policy Period"

                    android:textColor="#666666"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="12sp"

                    app:layout_constraintTop_toBottomOf="@id/proposer_name"
                    app:layout_constraintStart_toStartOf="@id/claim_status"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    android:layout_marginTop="12dp"

                    />

            <!--Policy Period-->
            <TextView
                    android:id="@+id/policy_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="10/09/2018 - 09/09/2019"

                    android:textColor="#777777"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textSize="14sp"


                    app:layout_constraintTop_toBottomOf="@id/policy_period_title"
                    app:layout_constraintStart_toStartOf="@id/claim_status"
                    app:layout_constraintEnd_toStartOf="@id/guideline"

                    />


            <!--Policy Number Title-->
            <TextView
                    android:id="@+id/policy_number_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Policy Number"

                    android:textColor="#666666"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="12sp"

                    app:layout_constraintTop_toTopOf ="@id/proposer_name_title"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"

                    />

            <!--Policy Number-->
            <TextView
                    android:id="@+id/policy_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="AA0020985"

                    android:textColor="#777777"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textSize="14sp"

                    app:layout_constraintTop_toBottomOf="@id/policy_number_title"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"

                    />
            <!-- Seprator -->
            <View
                    android:id="@+id/seprator_view"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/policy_period"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6"

                    />

            <ImageView
                    android:id="@+id/view_claim_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_view"
                    app:layout_constraintTop_toBottomOf="@id/policy_period"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintHorizontal_bias="0.45"
                    />

            <TextView
                    android:id="@+id/policy_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="VIEW"

                    android:textColor="#777777"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textSize="15sp"

                    app:layout_constraintTop_toTopOf="@id/view_claim_image_view"
                    app:layout_constraintBottom_toBottomOf="@+id/view_claim_image_view"
                    app:layout_constraintStart_toEndOf="@id/view_claim_image_view"
                    android:layout_marginLeft="10dp"

                    />

            <View
                    android:id="@+id/seprator_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toBottomOf="@id/view_claim_image_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>