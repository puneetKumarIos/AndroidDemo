<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/policy_info_cardview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Claim Status -->

            <TextView
                    android:id="@+id/claim_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Claim Id : Awaited"

                    android:textColor="#008391"
                    android:textSize="16sp"
                    android:textStyle="normal"

                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"


                    />

            <!-- Claim Type Title -->
            <TextView
                    android:id="@+id/claim_type__title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Claim Type"
                    android:textColor="#666666"
                    android:textSize="12sp"

                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="@id/claim_status"
                    app:layout_constraintTop_toBottomOf="@id/claim_status"


                    />

            <!-- Claim Type -->
            <TextView
                    android:id="@+id/claim_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"

                    android:text="Reimbursement"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="@id/claim_type__title"
                    app:layout_constraintTop_toBottomOf="@id/claim_type__title"

                    />


            <!-- Status Title-->
            <TextView
                    android:id="@+id/status_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"

                    android:text="Status"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="normal"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="@id/claim_type__title"

                    />

            <!--Status-->
            <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"

                    android:text="AA0020985"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/status_title"

                    />


            <!--Filed On Title-->
            <TextView
                    android:id="@+id/file_on_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"

                    android:fontFamily="sans-serif-medium"
                    android:text="Filed On"
                    android:textColor="#666666"
                    android:textSize="12sp"

                    android:textStyle="normal"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="@id/claim_type"
                    app:layout_constraintTop_toBottomOf="@id/claim_type"

                    />

            <!--filed on-->
            <TextView
                    android:id="@+id/filed_on"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"

                    android:text="Not Applicable"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:textStyle="normal"


                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    app:layout_constraintStart_toStartOf="@id/file_on_title"
                    app:layout_constraintTop_toBottomOf="@id/file_on_title"

                    />


            <!-- Member Title-->
            <TextView
                    android:id="@+id/member_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"

                    android:text="Member"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="normal"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="@id/file_on_title"

                    />

            <!--Member-->
            <TextView
                    android:id="@+id/member"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"

                    android:text="AA0020985"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toBottomOf="@id/member_title"

                    />


            <!-- Seprator -->
            <View
                    android:id="@+id/seprator_view"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filed_on" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"

                    />

            <ImageView
                    android:id="@+id/view_claim_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/seprator_view"
                    app:srcCompat="@drawable/ic_view" />

            <TextView
                    android:id="@+id/view_claim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:fontFamily="sans-serif-medium"
                    android:text="VIEW"
                    android:textColor="#777777"
                    android:textSize="15sp"

                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/view_claim_image_view"
                    app:layout_constraintStart_toEndOf="@id/view_claim_image_view"
                    app:layout_constraintTop_toTopOf="@id/view_claim_image_view"

                    />

            <View
                    android:id="@+id/seprator_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_claim_image_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>