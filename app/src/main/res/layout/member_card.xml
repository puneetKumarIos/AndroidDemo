<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        tools:context=".ui.policyDetails.PolicyDetails" >


    <androidx.cardview.widget.CardView

            android:id="@+id/member_container_cardview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <!-- Background -->
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"


                    android:background="@drawable/document_border"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            <!-- Name Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_name_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Name Title -->

                    <TextView
                            android:id="@+id/name_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:text="Name"
                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-medium"


                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />
                    <!-- Name -->
                    <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="Mr Tasdeek Raza G"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/name_title"
                            app:layout_constraintTop_toTopOf="@id/name_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Member ID Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/details_member_id__cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    app:layout_constraintTop_toBottomOf="@id/member_name_cardview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Member Id Title -->

                    <TextView
                            android:id="@+id/details_member_id_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:text="Member Id"
                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-medium"


                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />
                    <!-- Member Id -->
                    <TextView
                            android:id="@+id/details_member_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="100098657"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/details_member_id_title"
                            app:layout_constraintTop_toTopOf="@id/details_member_id_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Member ID Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_id__cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    app:layout_constraintTop_toBottomOf="@id/member_name_cardview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Member Id Title -->

                    <TextView
                            android:id="@+id/member_id_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:text="Member Id"
                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="sans-serif-medium"


                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />
                    <!-- Member Id -->
                    <TextView
                            android:id="@+id/member_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="100098657"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/member_id_title"
                            app:layout_constraintTop_toTopOf="@id/member_id_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Member RelationShip Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_relationship_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/member_id__cardview">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- relationship Title -->
                    <TextView
                            android:id="@+id/member_relationship_title"
                            android:layout_width="150dp"
                            android:layout_height="40dp"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"

                            android:fontFamily="sans-serif-medium"
                            android:text="Relationship with\nPolicy Holder"

                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />

                    <!-- RelationShip -->
                    <TextView
                            android:id="@+id/member_relationship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="Wife"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/member_relationship_title"
                            app:layout_constraintTop_toTopOf="@id/member_relationship_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Gender Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_gender_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/member_relationship_cardview">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Gender Title -->
                    <TextView
                            android:id="@+id/member_gender_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Gneder"

                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />

                    <!-- Gender -->
                    <TextView
                            android:id="@+id/member_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="Male"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/member_gender_title"
                            app:layout_constraintTop_toTopOf="@id/member_gender_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <!-- DOB Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_dob_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/member_gender_cardview">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Dob Title -->
                    <TextView
                            android:id="@+id/member_dob_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Date of Birth"

                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />

                    <!-- DOB -->
                    <TextView
                            android:id="@+id/member_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="01/01/1991"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/member_dob_title"
                            app:layout_constraintTop_toTopOf="@id/member_dob_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Email Id Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_email_id_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/member_dob_cardview">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- email Title -->
                    <TextView
                            android:id="@+id/member_email_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Email Id"

                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />

                    <!-- Email -->
                    <TextView
                            android:id="@+id/member_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="Kumar.puneet119@gmail.com"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/member_email_title"
                            app:layout_constraintTop_toTopOf="@id/member_email_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Phone Number Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_phone_number_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/member_email_id_cardview">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Phone Number Title -->
                    <TextView
                            android:id="@+id/member_phone_number_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Phone Number"

                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />

                    <!-- Phone Number -->
                    <TextView
                            android:id="@+id/member_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="9971385593"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/member_phone_number_title"
                            app:layout_constraintTop_toTopOf="@id/member_phone_number_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            !-- Occupation Card View -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/member_occupation_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/member_phone_number_cardview">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Occupation Title -->
                    <TextView
                            android:id="@+id/member_occupation_title"
                            android:layout_width="150dp"
                            android:layout_height="30dp"

                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Occupation"

                            android:textColor="#777777"
                            android:textSize="13sp"
                            android:textStyle="normal"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"


                            />

                    <!-- Occupation -->
                    <TextView
                            android:id="@+id/member_occupation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-light"

                            android:text="Architect"
                            android:textColor="#555555"
                            android:textSize="13sp"

                            android:textStyle="normal"
                            app:layout_constraintStart_toEndOf="@id/member_occupation_title"
                            app:layout_constraintTop_toTopOf="@id/member_occupation_title"


                            />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            !-- Seprator -->

            <View
                    android:id="@+id/seprator_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/member_occupation_cardview" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/white"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/member_container_cardview"

            />




</androidx.constraintlayout.widget.ConstraintLayout>