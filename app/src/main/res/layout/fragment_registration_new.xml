<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">


    <!--Login ScrollView-->
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/login_scrollView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/create_account_background_containerview">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.Activities.MainActivity">

            <!--Title ImageView-->

            <ImageView

                    android:id="@+id/header_imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:scaleType="centerInside"
                    android:src="@drawable/new_login_healthjinn"

                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <!--Credential Background View -->
            <View
                    android:id="@+id/cred_backgroundview"
                    android:layout_width="0dp"
                    android:layout_height="120dp"

                    android:background="@drawable/rounded_layer"

                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="30dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/header_imageView"
            />

            <!-- Phone Number / Email TextView -->
            <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="0dp"
                    android:layout_height="50dp"

                    app:hintTextAppearance="@style/HintText"
                    android:hint="Registered Phone Number / Email Id"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    app:layout_constraintEnd_toEndOf="@+id/cred_backgroundview"
                    app:layout_constraintStart_toStartOf="@+id/cred_backgroundview"
                    app:layout_constraintTop_toTopOf="@+id/cred_backgroundview">


                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        android:textColor="#000000"
                        android:textCursorDrawable="@color/black"
                        android:theme="@style/MyEditTextBottomLine"

                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textStyle="normal"

                        />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password TextView -->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"

                    android:hint="Password"
                    app:hintTextAppearance="@style/HintText"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"

                    app:layout_constraintEnd_toEndOf="@+id/cred_backgroundview"
                    app:layout_constraintStart_toStartOf="@+id/cred_backgroundview"
                    app:layout_constraintBottom_toBottomOf="@+id/cred_backgroundview">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:textColor="#000000"
                        android:textCursorDrawable="@color/black"
                        android:theme="@style/MyEditTextBottomLine"
                        android:inputType="textPassword"

                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textStyle="normal"

                        />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Forgot Password TextView -->
            <TextView
                    android:id="@+id/forgot_password_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:background="@android:color/transparent"
                    android:textColor="#24838F"
                    android:text="Forgot Password?"

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"

                    app:layout_constraintEnd_toEndOf="@+id/cred_backgroundview"
                    app:layout_constraintTop_toBottomOf="@+id/cred_backgroundview" />

            <!-- Login TextView -->
            <TextView
                    android:id="@+id/login_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"

                    android:text="LOGIN"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/login_rounded_layer"

                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"

                    app:layout_constraintEnd_toEndOf="@+id/cred_backgroundview"
                    app:layout_constraintStart_toStartOf="@+id/cred_backgroundview"
                    app:layout_constraintTop_toBottomOf="@+id/cred_backgroundview" />

            <!-- Login Via Otp TextView -->
            <TextView
                    android:id="@+id/otp_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:background="@android:color/transparent"
                    android:text="Login using OTP"
                    android:textColor="#24838F"

                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"


                    app:layout_constraintStart_toStartOf="@+id/login_button"
                    app:layout_constraintTop_toBottomOf="@+id/login_button" />

            <!-- Login trouble TextView -->
            <TextView
                    android:id="@+id/login_trouble_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"


                    android:background="@android:color/transparent"
                    android:text="Touble logging in?"
                    android:textColor="#24838F"

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"

                    app:layout_constraintEnd_toEndOf="@+id/login_button"
                    app:layout_constraintTop_toBottomOf="@+id/login_button" />

            <!-- seprator -->
            <View
                    android:id="@+id/seprator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"

                    android:background="#8C8C8C"

                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="40dp"


                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_trouble_button" />

            <!-- or_rounded_layer -->
            <TextView

                    android:id="@+id/or"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:gravity="center"
                    android:text="OR"
                    android:textColor="#000000"
                    android:background="@drawable/or_rounded_layer"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"

                    app:layout_constraintTop_toTopOf="@+id/seprator"
                    app:layout_constraintBottom_toTopOf="@+id/seprator"
                    app:layout_constraintStart_toStartOf="@+id/seprator"
                    app:layout_constraintEnd_toEndOf="@+id/seprator"
                    />

            <!-- facebook_button -->
            <ImageButton
                    android:id="@+id/facebook_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:background="@android:color/transparent"
                    android:src="@drawable/facebook"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"


                    app:layout_constraintEnd_toStartOf="@+id/google_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/or" />


            <!-- google -->
            <ImageButton

                    android:id="@+id/google_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:src="@drawable/google"
                    android:background="@android:color/transparent"

                    android:layout_marginRight="10dp"

                    app:layout_constraintStart_toEndOf="@+id/facebook_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/facebook_button"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <!--create_account_background_containerview-->
    <View
            android:id="@+id/create_account_background_containerview"
            android:layout_width="0dp"
            android:layout_height="120dp"

            android:background="#FFFFFF"
            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_scrollView" />

    <!--First Time-->
    <TextView
            android:id="@+id/first_time_healthjinn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="First time on HealthJinn?"

            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"

            app:layout_constraintTop_toTopOf="@+id/create_account_background_containerview"
            app:layout_constraintEnd_toEndOf="@+id/create_account_background_containerview"
            app:layout_constraintStart_toStartOf="@+id/create_account_background_containerview"
            />

    <!--create_account_button-->
    <TextView
            android:id="@+id/create_account_button"
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:background="@drawable/border_button"
            android:gravity="center"
            android:text="CREATE ACCOUNT"
            android:textColor="#F26522"

            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"

            app:layout_constraintEnd_toEndOf="@+id/create_account_background_containerview"
            app:layout_constraintStart_toStartOf="@+id/create_account_background_containerview"
            app:layout_constraintTop_toBottomOf="@+id/first_time_healthjinn" />

    <!--TC-->
    <TextView
            android:text="TC  |"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:id="@+id/tc_button"
            android:gravity="end|center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="#009688"
            android:background="@android:color/transparent"

            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"

            app:layout_constraintTop_toBottomOf="@+id/create_account_button"
            app:layout_constraintStart_toStartOf="@+id/create_account_button"
            app:layout_constraintEnd_toStartOf="@+id/privacy_policy_button"
            />

    <!--PP-->
    <TextView
            android:id="@+id/privacy_policy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Privacy Policy |"
            android:textColor="#24838F"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.5"

            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"

            app:layout_constraintStart_toEndOf="@+id/tc_button"
            app:layout_constraintTop_toBottomOf="@+id/create_account_button"
            app:layout_constraintEnd_toStartOf="@+id/faqs_button"/>

    <!--FAQs-->
    <TextView
            android:id="@+id/faqs_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:text="FAQs"
            android:textColor="#24838F"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.5"

            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"

            app:layout_constraintStart_toEndOf="@+id/privacy_policy_button"
            app:layout_constraintEnd_toEndOf="@+id/create_account_button"
            app:layout_constraintTop_toBottomOf="@+id/create_account_button"
            />


</androidx.constraintlayout.widget.ConstraintLayout>