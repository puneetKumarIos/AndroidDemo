<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/otp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

    <!--Login Via Otp ScrollView-->
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/otp_scrollview"
            android:layout_marginBottom="50dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <!--Title ImageView-->
            <ImageView
                    android:id="@+id/header_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/new_login_healthjinn"

                    android:layout_marginTop="30dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />

            <!--Back ImageView-->
            <ImageView
                    android:id="@+id/back_imageview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/gray_back"
                    android:scaleType="center"

                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <!-- Message Textview -->
            <TextView
                    android:id="@+id/title_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="OTP has been sent on your phone number."
                    android:gravity="center"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/back_imageview"

                    />

            <!-- NEXT -->
            <TextView
                    android:id="@+id/send_otp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"

                    android:text="NEXT"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/login_rounded_layer"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_textview"
                    />

            <!-- Login Trouble -->
            <TextView
                    android:id="@+id/Trouble_logging_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Trouble logging in?"
                    android:background="@android:color/transparent"
                    android:textColor="#24838F"
                    android:layout_marginTop="8dp"

                    app:layout_constraintEnd_toEndOf="@+id/send_otp"
                    app:layout_constraintTop_toBottomOf="@+id/send_otp"
                   />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <!--TC-->
    <TextView

            android:id="@+id/tc_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:text="TC  |"
            android:gravity="end|center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="@android:color/transparent"
            android:textColor="#009688"

            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/privacy_policy_button"

            />

    <!--PP-->
    <TextView
            android:id="@+id/privacy_policy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Privacy Policy |"
            android:textColor="#24838F"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.5"


            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"

            app:layout_constraintStart_toEndOf="@+id/tc_button"
            app:layout_constraintTop_toTopOf="@id/tc_button"
            app:layout_constraintEnd_toStartOf="@+id/faqs_button"

            />

    <!--FAQs-->
    <TextView
            android:id="@+id/faqs_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:text="FAQs"
            android:textColor="#24838F"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.5"


            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"

            app:layout_constraintStart_toEndOf="@+id/privacy_policy_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/privacy_policy_button"

           />


</androidx.constraintlayout.widget.ConstraintLayout>
