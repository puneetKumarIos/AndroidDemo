<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/login_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/login_scrollView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/create_account_background_containerview">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

            <ImageView
                    android:layout_width="0dp"
                    android:src="@drawable/new_login_healthjinn"
                    android:layout_height="50dp"
                    android:id="@+id/header_imageView"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:scaleType="centerInside"
                    android:layout_marginStart="8dp"
                    android:visibility="visible"
            />
            <View
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:id="@+id/cred_backgroundview"
                    android:background="@drawable/rounded_layer"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/header_imageView"
            />
            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    app:layout_constraintEnd_toEndOf="@+id/cred_backgroundview"
                    app:layout_constraintStart_toStartOf="@+id/cred_backgroundview"
                    app:layout_constraintTop_toTopOf="@+id/cred_backgroundview"
                    android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="@color/colorAccent"
                        android:textColor="#000000"
                        android:hint="Registered Phone Number"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    app:layout_constraintEnd_toEndOf="@+id/cred_backgroundview"
                    app:layout_constraintStart_toStartOf="@+id/cred_backgroundview"
                    app:layout_constraintBottom_toBottomOf="@+id/cred_backgroundview"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/textInputLayout">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:hint="Password"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                    android:text="Forgot Password?"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/forgot_password_button"
                    app:layout_constraintEnd_toEndOf="@+id/cred_backgroundview"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cred_backgroundview"
                    android:background="@android:color/transparent"
                    android:textColor="#24838F"/>
            <Button
                    android:text="LOGIN"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:id="@+id/login_button"
                    app:layout_constraintStart_toStartOf="@+id/cred_backgroundview"
                    app:layout_constraintEnd_toEndOf="@+id/cred_backgroundview"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="90dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/login_rounded_layer"
                    app:layout_constraintTop_toBottomOf="@+id/cred_backgroundview"
                    android:textColorHint="#FFFFFF"/>
            <Button
                    android:text="Login using OTP"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/otp_login_button"
                    app:layout_constraintStart_toStartOf="@+id/login_button"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#24838F"
                    app:layout_constraintTop_toBottomOf="@+id/login_button"/>
            <Button
                    android:text="Touble logging in?"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/login_trouble_button"
                    app:layout_constraintEnd_toEndOf="@+id/login_button"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#24838F"
                    app:layout_constraintTop_toBottomOf="@+id/login_button"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/seprator"
                    android:background="#8C8C8C"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="45dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_trouble_button"/>
            <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:id="@+id/or"
                    android:text="OR"
                    android:textColor="#000000"
                    android:background="@drawable/or_rounded_layer"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/seprator"
                    app:layout_constraintBottom_toTopOf="@+id/seprator"
                    app:layout_constraintStart_toStartOf="@+id/seprator"
                    app:layout_constraintEnd_toEndOf="@+id/seprator"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>
            <ImageButton
                    android:src="@drawable/facebook"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/facebook_button"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/google_button"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/or"/>

            <ImageButton
                    android:src="@drawable/google"
                    android:background="@android:color/transparent"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/google_button"
                    android:layout_marginRight="10dp"
                    app:layout_constraintStart_toEndOf="@+id/facebook_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/facebook_button"/>

        </android.support.constraint.ConstraintLayout>


    </ScrollView>
    <View
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:background="#FFFFFF"
            android:id="@+id/create_account_background_containerview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_scrollView"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="First time on HealthJinn?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_time_healthjinn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/create_account_background_containerview"
            app:layout_constraintEnd_toEndOf="@+id/create_account_background_containerview"
            app:layout_constraintStart_toStartOf="@+id/create_account_background_containerview"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="CREATE ACCOUNT"
            android:textColor="#F26522"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/create_account_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/first_time_healthjinn"
            app:layout_constraintStart_toStartOf="@+id/create_account_background_containerview"
            app:layout_constraintEnd_toEndOf="@+id/create_account_background_containerview"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/border_button"
            android:layout_marginRight="15dp"/>
    <Button
            android:text="TC  |"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/tc_button"
            android:gravity="end|center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/create_account_button"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/create_account_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/privacy_policy_button"
            android:background="@android:color/transparent"
            android:textColor="#009688"/>
    <Button
            android:text="Privacy Policy |"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/privacy_policy_button"
            android:textColor="#24838F"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/tc_button"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintTop_toBottomOf="@+id/create_account_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/faqs_button"/>
    <Button
            android:text="FAQs"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/faqs_button"
            android:textColor="#24838F"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/privacy_policy_button"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="@+id/create_account_button"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/create_account_button"
            app:layout_constraintHorizontal_bias="0.5"/>


</android.support.constraint.ConstraintLayout>