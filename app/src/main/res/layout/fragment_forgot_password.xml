<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        >

    <ScrollView
            android:id="@+id/forgot_password_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <!-- header_imageView -->
            <ImageView
                    android:id="@+id/header_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/new_login_healthjinn"

                    android:layout_marginTop="30dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <!-- back_imageview -->
            <ImageView
                    android:id="@+id/back_imageview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:scaleType="center"
                    android:src="@drawable/gray_back"

                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <!-- title_textview -->
            <TextView
                    android:id="@+id/title_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="start"
                    android:text="Enter below details to help us find \nyour account"
                    android:textColor="@color/black"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/back_imageview" />

            <!-- Phone Number / Email Card View -->
            <androidx.cardview.widget.CardView

                    android:id="@+id/forgot_email_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap="false"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_textview">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!-- Phone Number / Email TextView -->
                    <com.google.android.material.textfield.TextInputLayout

                            android:id="@+id/email_textview"
                            android:layout_width="0dp"
                            android:layout_height="40dp"

                            app:hintTextAppearance="@style/HintText"
                            android:hint="Registered Phone Number / Email Id"

                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >


                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"


                                android:textColor="#000000"
                                android:textCursorDrawable="@color/black"

                                android:fontFamily="sans-serif"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:background="@null"


                                />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <!-- forgot_login_Id_button -->
            <TextView
                    android:id="@+id/forgot_login_Id_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:background="@android:color/transparent"
                    android:text="Forgot Login Id?"
                    android:textColor="#24838F"

                    android:layout_marginTop="10dp"

                    app:layout_constraintEnd_toEndOf="@+id/forgot_email_cardview"
                    app:layout_constraintTop_toBottomOf="@+id/forgot_email_cardview" />

            <!-- next -->
            <TextView
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="40dp"

                    android:background="@drawable/login_rounded_layer"
                    android:text="NEXT"
                    android:textColor="#FFFFFF"
                    android:gravity="center"

                    android:layout_marginTop="20dp"

                    app:layout_constraintEnd_toEndOf="@+id/forgot_email_cardview"
                    app:layout_constraintStart_toStartOf="@+id/forgot_email_cardview"
                    app:layout_constraintTop_toBottomOf="@+id/forgot_login_Id_button" />

            <!-- Trouble_logging_in_button -->
            <TextView
                    android:id="@+id/Trouble_logging_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:background="@android:color/transparent"
                    android:text="Trouble logging in?"
                    android:textColor="#24838F"

                    android:layout_marginTop="10dp"

                    app:layout_constraintEnd_toEndOf="@+id/next"
                    app:layout_constraintTop_toBottomOf="@+id/next" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


    <!--TC-->
    <TextView

            android:id="@+id/tc_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:text="TC  |"
            android:gravity="end|center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="@android:color/transparent"
            android:textColor="#009688"

            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/privacy_policy_button"

            />

    <!--PP-->
    <TextView
            android:id="@+id/privacy_policy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Privacy Policy |"
            android:textColor="#24838F"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.5"


            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"

            app:layout_constraintStart_toEndOf="@+id/tc_button"
            app:layout_constraintTop_toTopOf="@id/tc_button"
            app:layout_constraintEnd_toStartOf="@+id/faqs_button"

            />

    <!--FAQs-->
    <TextView
            android:id="@+id/faqs_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:text="FAQs"
            android:textColor="#24838F"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.5"


            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"

            app:layout_constraintStart_toEndOf="@+id/privacy_policy_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/privacy_policy_button"

            />


</androidx.constraintlayout.widget.ConstraintLayout>
