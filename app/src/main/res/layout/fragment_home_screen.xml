<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

    <!-- Top Guide Line -->
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/parent_top_guideline"
                app:layout_constraintGuide_percent="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                />

    <!-- orange_statusBar_background_view -->
    <View
                android:id="@+id/orange_statusBar_bakcground_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#F27023"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parent_top_guideline"
                app:layout_constraintBottom_toTopOf="@id/profile_top_guideline"

                />

    <!-- profile_top_guideline -->
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/profile_top_guideline"
                app:layout_constraintGuide_percent="0.0392"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                />

    <!-- orange_bakcground_view -->
    <View
                android:id="@+id/orange_bakcground_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#F27023"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_top_guideline"
                app:layout_constraintBottom_toTopOf="@id/orange_background_bottom_guideline"

                />

    <!-- orange_background_bottom_guideline -->

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/orange_background_bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintGuide_percent="0.21203831" />

    <!-- profile_imageview -->

    <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_imageview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/male_default_pic_new"
                app:layout_constraintTop_toTopOf="@id/orange_bakcground_view"
                app:layout_constraintBottom_toTopOf="@id/profiel_bootom_guideline"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                app:layout_constraintDimensionRatio="1:1"
                />

    <!-- name_textView -->
    <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_textView"
                android:text="WELCOME Piyush Kumar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/profile_imageview"
                app:layout_constraintEnd_toStartOf="@+id/notification_imageview"
                app:layout_constraintTop_toTopOf="@+id/profile_imageview"
                app:layout_constraintBottom_toBottomOf="@+id/profile_imageview"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"/>

    <!-- notification_imageview -->
    <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/notification_imageview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/notification"
                app:layout_constraintTop_toTopOf="@id/profile_imageview"
                app:layout_constraintBottom_toBottomOf="@id/profile_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintDimensionRatio="1:1"
                />

    <!-- profiel_bootom_guideline -->
    <androidx.constraintlayout.widget.Guideline
                android:id="@+id/profiel_bootom_guideline"
                app:layout_constraintGuide_percent="0.09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                />

    <!-- step_top_guideline -->
    <androidx.constraintlayout.widget.Guideline
                android:id="@+id/step_top_guideline"
                app:layout_constraintGuide_percent="0.11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                />

    <!-- step_container_card_view -->
    <androidx.cardview.widget.CardView

            android:id="@+id/step_cardview"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"




            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="1dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/step_bottom_guideline"
            app:layout_constraintTop_toBottomOf="@id/step_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/sneaker_top_guideline"
                    app:layout_constraintGuide_percent="0.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    />

            <!-- sneaker ImageView -->
            <ImageView
                    android:id="@+id/sneaker_imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sneaker"
                    app:layout_constraintTop_toTopOf="@+id/sneaker_top_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="15dp"
                   />

            <!-- Today Step Textview -->
            <TextView
                    android:id="@+id/step_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="My Today's Steps"
                    android:textColor="#333333"
                    app:layout_constraintStart_toEndOf="@+id/sneaker_imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/sneaker_top_guideline"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="30dp"/>

            <!-- Step Count Textview -->
            <TextView
                    android:id="@+id/step_count_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="600 /10000"
                    android:textColor="#333333"

                    android:layout_marginTop="7dp"

                    app:layout_constraintStart_toStartOf="@+id/step_textView"
                    app:layout_constraintEnd_toEndOf="@+id/step_textView"
                    app:layout_constraintTop_toBottomOf="@+id/step_textView"
                   />


            <!-- SYNC NOW CARD VIEW -->

            <androidx.cardview.widget.CardView

                    android:id="@+id/sync_now_cardview"
                    android:layout_width="120dp"
                    android:layout_height="30dp"

                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap="false"




                    android:layout_marginTop="10dp"

                    app:layout_constraintStart_toStartOf="@+id/step_count_textView"
                    app:layout_constraintTop_toBottomOf="@+id/step_count_textView"
                    >

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <!-- SYNC NOW -->
                    <TextView
                            android:id="@+id/sync_now_textview"
                            android:layout_width="0dp"
                            android:layout_height="0dp"

                            android:text="SYNC NOW"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:background="#F27023"

                            android:fontFamily="sans-serif-medium"
                            android:textSize="12sp"


                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.cardview.widget.CardView>


            <!-- helthfit_imageView -->

            <ImageView
                    android:id="@+id/helthfit_imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:src="@drawable/health_fit_icon_new"
                    android:scaleType="center"

                    app:layout_constraintTop_toBottomOf="@+id/sync_now_cardview"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"/>

            <!-- lastSync Textview -->

            <TextView
                    android:id="@+id/last_sync_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Last synced on 14 Aug 2019 at 6:10 PM"
                    android:textColor="#333333"

                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"

                    app:layout_constraintStart_toEndOf="@+id/helthfit_imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/helthfit_imageView"
                    app:layout_constraintBottom_toBottomOf="@+id/helthfit_imageView"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.Guideline
                android:id="@+id/step_bottom_guideline"
                app:layout_constraintGuide_percent="0.34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                />
    <androidx.constraintlayout.widget.Guideline
                android:id="@+id/banner_top_guideline"
                app:layout_constraintGuide_percent="0.36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                />

    <!-- Banner ImageView -->

    <ImageView

            android:id="@+id/banner_imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:src="@drawable/banner_placeholder"
            android:scaleType="fitXY"

            app:layout_constraintTop_toBottomOf="@+id/banner_top_guideline"
            app:layout_constraintBottom_toTopOf="@+id/banner_bottom_guideline"
            app:layout_constraintStart_toStartOf="@id/step_cardview"
            app:layout_constraintEnd_toEndOf="@id/step_cardview"

                />

    <androidx.constraintlayout.widget.Guideline
                android:id="@+id/banner_bottom_guideline"
                app:layout_constraintGuide_percent="0.55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                />
    <androidx.constraintlayout.widget.Guideline
                android:id="@+id/symptom_top_guideline"
                app:layout_constraintGuide_percent="0.57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                />


    <!-- Symptom CardView -->
    <androidx.cardview.widget.CardView

            android:id="@+id/symptom_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"


            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"

            app:layout_constraintTop_toBottomOf="@id/symptom_top_guideline"
            app:layout_constraintBottom_toTopOf="@id/network_hospital_card_view"
            app:layout_constraintEnd_toStartOf="@+id/chat_card_view"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/banner_imageView"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:src="@drawable/symptom_checker"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/symptom_centre_guideline"
                    />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/symptom_centre_guideline"
                    app:layout_constraintGuide_percent="0.45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    />

            <TextView
                    android:id="@+id/symptom_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Symptoms \nChecker"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textStyle="normal"

                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toBottomOf="@+id/symptom_centre_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


    <!-- Chat CardView -->
    <androidx.cardview.widget.CardView

            android:id="@+id/chat_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"


            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"

            app:layout_constraintStart_toEndOf="@id/symptom_card_view"
            app:layout_constraintEnd_toStartOf="@+id/medicine_card_view"
            app:layout_constraintTop_toTopOf="@id/symptom_card_view"
            app:layout_constraintBottom_toBottomOf="@id/symptom_card_view"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/chat_imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:src="@drawable/chat_with_doctor"
                    android:scaleType="centerInside"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/chat_centre_guideline"
                    />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/chat_centre_guideline"
                    app:layout_constraintGuide_percent="0.45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    />

            <TextView
                    android:id="@+id/chat_doctor_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Chat with \nDoctor"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textStyle="normal"

                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toBottomOf="@+id/chat_centre_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


    <!-- Medicine CardView -->
    <androidx.cardview.widget.CardView

            android:id="@+id/medicine_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"


            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@id/chat_card_view"
            app:layout_constraintTop_toTopOf="@id/chat_card_view"
            app:layout_constraintBottom_toBottomOf="@id/chat_card_view"
            app:layout_constraintEnd_toEndOf="@id/banner_imageView"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/medicine_imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:src="@drawable/order_medicine"
                    android:scaleType="centerInside"

                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/medicine_centre_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/medicine_centre_guideline"
                    app:layout_constraintGuide_percent="0.45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    />

            <TextView
                    android:id="@+id/medicine_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Order \nMedicine"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textStyle="normal"

                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toBottomOf="@+id/medicine_centre_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>



    <!-- Hospital CardView -->
    <androidx.cardview.widget.CardView

            android:id="@+id/network_hospital_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"


            app:layout_constraintStart_toStartOf="@+id/banner_imageView"
            app:layout_constraintTop_toBottomOf="@id/symptom_card_view"
            app:layout_constraintBottom_toTopOf="@id/network_bottom_guideline"
            app:layout_constraintEnd_toStartOf="@+id/appointment_card_view"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/network_imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/network_hospital"

                    app:layout_constraintBottom_toTopOf="@+id/hospital_centre_guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/hospital_centre_guideline"
                    app:layout_constraintGuide_percent="0.45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    />

            <TextView
                    android:id="@+id/network_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Network \nHospital"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textStyle="normal"

                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toBottomOf="@+id/hospital_centre_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>



    <!-- Appointment CardView -->
    <androidx.cardview.widget.CardView

            android:id="@+id/appointment_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"


            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@id/network_hospital_card_view"
            app:layout_constraintEnd_toStartOf="@+id/policy_card_view"
            app:layout_constraintTop_toTopOf="@id/network_hospital_card_view"
            app:layout_constraintBottom_toBottomOf="@id/network_hospital_card_view"

            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/appointment_imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:src="@drawable/doctor_search_book"
                    android:scaleType="centerInside"

                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/appointment_centre_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/appointment_centre_guideline"
                    app:layout_constraintGuide_percent="0.45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    />

            <TextView
                    android:id="@+id/appointment_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Book \nAppointments"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textStyle="normal"

                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toBottomOf="@+id/appointment_centre_guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


    <!-- Policy CardView -->
    <androidx.cardview.widget.CardView

            android:id="@+id/policy_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:elevation="8dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"


            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@id/appointment_card_view"
            app:layout_constraintTop_toTopOf="@id/appointment_card_view"
            app:layout_constraintBottom_toBottomOf="@id/appointment_card_view"
            app:layout_constraintEnd_toEndOf="@+id/banner_imageView"

            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/policy_imageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:src="@drawable/policy_document"
                    android:scaleType="centerInside"

                    android:layout_marginTop="10dp"

                    app:layout_constraintTop_toTopOf="parent"
